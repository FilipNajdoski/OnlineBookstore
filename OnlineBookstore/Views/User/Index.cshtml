@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Index";
}

<h1 class="bg-dark text-white text-center p-3">All Users</h1>

<div class="custom-container">
    <table class="table table-sm table-bordered">
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="2">
                <a asp-action="Create" class="btn btn-block btn-success"><i class="fas fa-plus"></i>&nbsp; Create a User</a>
            </th>
        </tr>
        <tr><th>ID</th><th>Name</th><th>Email</th><th colspan="2">Actions</th></tr>
        @foreach (Microsoft.AspNetCore.Identity.IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td><a class="btn btn-primary btn-block"asp-action="Edit" asp-route-id="@user.Id"><i class="fas fa-edit"></i>&nbsp; Edit</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id"method="post">
                        <button type="submit"class="btn btn-block btn-danger"><i class="fas fa-trash-alt"></i>&nbsp;Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>

</div>

